<section class="appointment-area area-padding">
    <div class="container1">

        <div class="appointment-inner">
            <div class="row">
                <div class="col-sm-16 col-lg-10 offset-lg-1">
                  <div class="topnav">

   <div class="search-container">
     <form action="/dep_table" method="post">
       <input type="text" placeholder="Search by code.." name="search">
       <button type="submit"><i class="fa fa-search"></i></button>
     </form>
   </div>
 </div>
                    <caption>Department Table</caption>
                    <table id="hakona">
                        <thead>
                        <tr class="table100-head">
                            <th class="column4">Name</th>
                            <th class="column3">B_ID</th>
                            <th class="column3">Floor</th>
                            <th class="column3">Building</th>
                            <th class="column4">Location</th>
                            <th class="column4">Code</th>
                        </tr>
                        </thead>

                        <tbody>
                        {{#each department}}
                            <tr>
                                <td class="column4">{{name}}</td>
                                <td class="column3">{{b_id}}</td>
                                <td class="column3">{{floor}}</td>
                                <td class="column3">{{building}}</td>
                                <td class="column4">{{location}}</td>
                                <td class="column4">{{code}}</td>
                            </tr>
                        {{/each}}
                        </tbody>

                    </table>
                </div>


            </div>

        </div>

</section>
